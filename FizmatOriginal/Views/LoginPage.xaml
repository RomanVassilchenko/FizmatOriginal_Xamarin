<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:customActivityIndicator="clr-namespace:FizmatOriginal.ViewModels" x:Class="FizmatOriginal.Views.LoginPage">
    <ContentPage.Content>
        <Grid BackgroundColor="#012647">
            <StackLayout VerticalOptions="Center" Visual="Material">
                <StackLayout Margin="0,0,0,30" HorizontalOptions="CenterAndExpand" Orientation="Horizontal">
                    <customActivityIndicator:CustomWhiteActivityIndicator x:Name="activity_indicator" WidthRequest="60" HeightRequest="60" />
                    <Label Text="Fizmat Original" TextColor="White" FontAttributes="Bold" FontSize="30" VerticalOptions="CenterAndExpand" />
                </StackLayout>
                <StackLayout Padding="50" Spacing="40">
                    <Entry x:Name="entry_login" TextColor="Black" PlaceholderColor="Gray" Placeholder="Логин"></Entry>
                    <Entry x:Name="entry_password" TextColor="Black" PlaceholderColor="Gray" Placeholder="Пароль" IsPassword="True"></Entry>
                    <Button x:Name="btn_login" BackgroundColor="#A11015" TextColor="White" FontSize="25" FontAttributes="Bold" Text="Войти" Margin="0,40,0,0" />
                </StackLayout>
            </StackLayout>
        </Grid>
    </ContentPage.Content>
</ContentPage>
